<div class="pessoas-form">
  <%= form_with(model: @pessoa, local: true) do |form| %>
    <% if @pessoa.errors.any? %>
      <div class="alert alert-error">
        <h4><%= pluralize(@pessoa.errors.count, "erro") %> proibiu este registro de ser salvo:</h4>
        <ul>
          <% @pessoa.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :nome %>
      <%= form.text_field :nome %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

    <div class="form-group">
      <%= form.label :telefone %>
      <%= form.telephone_field :telefone %>
    </div>

    <%= form.submit "Salvar", class: "btn" %>
  <% end %>
</div>
